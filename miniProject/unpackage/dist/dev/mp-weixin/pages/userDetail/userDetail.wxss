.container {
  min-height: 100vh;
  background: #f8f9fa;
}
.banner-wrap {
  position: relative;
  height: 400rpx;
  overflow: visible;
  margin-bottom: 120rpx;
}
.banner-wrap .banner-bg {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transform: scale(1.1);
  filter: blur(10px);
}
.banner-wrap .banner-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.4));
}
.banner-wrap .user-card {
  position: absolute;
  bottom: -140rpx;
  left: 30rpx;
  right: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  z-index: 10;
}
.banner-wrap .user-card .user-info {
  display: flex;
  align-items: center;
  gap: 40rpx;
}
.banner-wrap .user-card .user-info .avatar-container {
  position: relative;
  flex-shrink: 0;
}
.banner-wrap .user-card .user-info .avatar-container .avatar-image {
  width: 180rpx !important;
  height: 180rpx !important;
  border: 6rpx solid white;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}
.banner-wrap .user-card .user-info .avatar-container .avatar-image:active {
  transform: scale(0.95);
}
.banner-wrap .user-card .user-info .avatar-container .online-status {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background: #4CAF50;
  border: 4rpx solid white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}
.banner-wrap .user-card .user-info .text-info {
  flex: 1;
  padding: 12rpx 0;
}
.banner-wrap .user-card .user-info .text-info .name-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}
.banner-wrap .user-card .user-info .text-info .name-row .username {
  font-size: 42rpx;
  font-weight: 600;
  color: #333;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}
.banner-wrap .user-card .user-info .text-info .tags-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}
.banner-wrap .user-card .user-info .text-info .active-time {
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
  gap: 8rpx;
}
.banner-wrap .user-card .user-info .text-info .active-time::before {
  content: "";
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background: #4CAF50;
  border-radius: 50%;
  margin-right: 4rpx;
}
.profile-detail {
  margin: 30rpx 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}
.profile-detail .left-section {
  margin-bottom: 30rpx;
}
.profile-detail .left-section .profile-text {
  margin-bottom: 20rpx;
}
.profile-detail .left-section .profile-text .profile-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}
.profile-detail .left-section .location-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}
.profile-detail .right-section {
  border-top: 2rpx solid #f5f5f5;
  padding-top: 24rpx;
}
.profile-detail .right-section .data-grid {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 24rpx;
}
.profile-detail .right-section .data-grid .data-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20rpx;
}
.profile-detail .right-section .data-grid .data-item .num {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}
.profile-detail .right-section .data-grid .data-item .label {
  font-size: 24rpx;
  color: #999;
}
.profile-detail .right-section .data-grid .divider {
  width: 2rpx;
  height: 40rpx;
  background: #f0f0f0;
}
.profile-detail .right-section .action-buttons {
  display: flex;
  justify-content: center;
  gap: 20rpx;
}
.profile-detail .right-section .action-buttons .wd-button {
  min-width: 160rpx;
}
.profile-detail .right-section .action-buttons .wd-button .wd-icon {
  margin-right: 4rpx;
}
.past-records {
  background: #fff;
  border-radius: 24rpx;
  margin: 0 20rpx 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  width: auto;
  box-sizing: border-box;
  overflow: hidden;
}
.past-records .article-list {
  margin: 0;
  padding: 0;
  width: 88%;
  box-sizing: border-box;
}
.past-records .article-list .article-card {
  max-width: 100%;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}
.past-records .article-list .article-card .article-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}
.past-records .article-list .article-card .article-header .author-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
  min-width: 0;
}
.past-records .article-list .article-card .article-header .author-info .author-avatar {
  flex-shrink: 0;
  width: 60rpx !important;
  height: 60rpx !important;
  border: 2rpx solid #f0f0f0;
}
.past-records .article-list .article-card .article-header .author-info .author-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 300rpx;
}
.past-records .article-list .article-card .article-header .article-time {
  font-size: 24rpx;
  color: #999;
  flex-shrink: 0;
  margin-left: 12rpx;
}
.past-records .article-list .article-card .article-content {
  margin-bottom: 12rpx;
  width: 100%;
}
.past-records .article-list .article-card .article-content .article-desc {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.past-records .article-list .article-card .image-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  gap: 8rpx;
  margin: 16rpx 0;
  width: 100%;
  box-sizing: border-box;
}
.past-records .article-list .article-card .image-list.image-count-1 .content-image {
  width: 80%;
  max-height: 400rpx;
  border-radius: 12rpx;
}
.past-records .article-list .article-card .image-list.image-count-2 {
  justify-content: flex-start;
}
.past-records .article-list .article-card .image-list.image-count-2 .content-image {
  width: calc(50% - 12rpx);
  height: 320rpx;
  border-radius: 8rpx;
}
.past-records .article-list .article-card .image-list.image-count-3 {
  justify-content: flex-start;
}
.past-records .article-list .article-card .image-list.image-count-3 .content-image {
  width: calc(33.33% - 6rpx);
  height: 240rpx;
  border-radius: 8rpx;
}
.past-records .article-list .article-card .image-list.image-count-4 {
  justify-content: flex-start;
}
.past-records .article-list .article-card .image-list.image-count-4 .content-image {
  width: calc(50% - 10rpx);
  height: 280rpx;
  border-radius: 8rpx;
}
.past-records .article-list .article-card .image-list .content-image {
  width: calc(33.33% - 6rpx);
  height: 400rpx;
  border-radius: 8rpx;
  object-fit: cover;
  flex-shrink: 0;
}
.past-records .article-list .article-card .article-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 8rpx;
  width: 100%;
}
.past-records .article-list .article-card .article-footer .article-stats {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}
.past-records .article-list .article-card .article-footer .article-stats .stat-item {
  display: flex;
  align-items: center;
  gap: 4rpx;
  color: #666;
  font-size: 24rpx;
}
.past-records .article-list .article-card .article-footer .article-tags {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
  max-width: 40%;
}
.past-records .article-list .article-card .article-footer .article-tags .wd-tag {
  max-width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.past-records .empty-content {
  padding: 60rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}
.past-records .empty-content text {
  font-size: 28rpx;
  color: #999;
}
.load-more {
  padding: 16rpx 0;
  text-align: center;
}
.load-more .loading, .load-more .no-more, .load-more .load-more-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}
.load-more .loading text, .load-more .no-more text, .load-more .load-more-btn text {
  font-size: 26rpx;
  color: #999;
}
.load-more .load-more-btn text {
  color: #666;
}
.load-more .load-more-btn:active {
  opacity: 0.7;
}